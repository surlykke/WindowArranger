#!/usr/bin/env bash
# Move everything aside
swaymsg '[title=.*] move to workspace 3'

# workspace 1 on eDP-1
swaymsg '[title=Build] focus, move to workspace 1, layout tabbed'
swaymsg '[title=Log] move to workspace 1'
swaymsg 'move workspace to eDP-1'
swaymsg 'output eDP-1 position 0 360'
# workspace 2 on DP-2
swaymsg '[app_id=google-chrome] focus, move to workspace 2, layout splith'
swaymsg '[title=".*Microsoft Teams.*"] move to workspace 2'
swaymsg '[instance=slack] move to workspace 2'
swaymsg '[instance="jetbrains-idea"] move to workspace 2'
swaymsg 'move workspace to DP-2'
swaymsg '[app_id=google-chrome] focus, split v, layout tabbed, mark current'
swaymsg 'unmark current'
swaymsg '[instance="jetbrains-idea"] focus, split v, layout tabbed, mark current'
swaymsg 'unmark current'
swaymsg '[instance=slack] focus, split v, layout splitv, mark current'
swaymsg '[title=".*Microsoft Teams.*"] move to mark current'
swaymsg 'unmark current'
swaymsg 'output DP-2 position 1920 0'
# Post commands
swaymsg [instance=slack] resize set width 20ppt
swaymsg [app_id=google-chrome] resize set width 35ppt
swaymsg [instance=jetbrains-idea] focus
